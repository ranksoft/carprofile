<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="2columns-left">
    <head>
        <css src="Razoyo_CarProfile::css/selectize/selectize.css"/>
        <css src="Razoyo_CarProfile::css/car-profile.css"/>
    </head>
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="razoyo_carprofile_my_car_form"
                   template="Razoyo_CarProfile::account/my_car.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Razoyo\CarProfile\ViewModel\MyCarData</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
